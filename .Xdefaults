!--------------------xdefauls
URxvt.font: xft:FantasqueSansMono:size=13,Powerline:size=12
!urxvt*termName: rxvt
URxvt*scrollBar: false
urxvt*matcher.button: 1
URxvt*depth: 32
URxvt*background: [98]#3a3a3a
URxvt.borderColor: [98]#3a3a3a
urxvt.boldFont:
URxvt.letterSpace: -1
URxvt.geometry: 80x18
Xft.dpi: 86
Xft*antialias: true
Xft*hinting: true
Xft*hintstyle: hintfull
URxvt*cursorUnderline: true
URxvt.cursorBlink: true
Xft*rgba: rgb
URxvt.internalBorder: 30
URxvt*fading: 0
URxvt*tintColor: #ffffff
URxvt*transparent: true
URxvt*shading: 50
URxvt*inheritPixmap: False
urxvt*metaSendsEscape: true

! Resizing
! git clone https://github.com/simmel/urxvt-resize-font ~/tmp/urxvt-resize-font
! mv ~/tmp/urxvt-resize-font/resize-font ~/.urxvt/ext/
urxvt.perl-ext-common: default,resize-font
URxvt.resize-font.bigger: Meta-0x2b
URxvt.resize-font.smaller: Meta-0x2d

!URxvt.keysym.Control-Right: \033[1;5C
!URxvt.keysym.Control-Left: \033[1;5D
! disable ctrl-shift
!URxvt*iso14755: False
!URxvt.iso14755_52: False

! special
*.foreground:   #ffffff
*.background:   #000000
*.cursorColor:  #ffffff

! black
*.color0:       #1e2320
*.color8:       #709080

! red
*.color1:       #705050
*.color9:       #dca3a3

! green
*.color2:       #60b48a
*.color10:      #c3bf9f

! yellow
*.color3:       #dfaf8f
*.color11:      #f0dfaf

! blue
*.color4:       #506070
*.color12:      #94bff3

! magenta
*.color5:       #dc8cc3
*.color13:      #ec93d3

! cyan
